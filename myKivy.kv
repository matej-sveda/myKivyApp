#:kivy 1.10.1
<ExitButton@Button>
    size_hint: .1, .1
    pos_hint: {"x" : .9, "top" : .1}
    on_press: app.exit()
    text: "EXIT"
    background_color: 1, 0, 0, 1

<Label1@Label>
    font_size: self.height
    size_hint: (1, 0.07)

<Label2@Label>
    font_size: self.height
    size_hint: (1, 0.05)

<Label3@Label>
    font_size: self.height
    size_hint: (1, 0.035)

<CustomPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    Button:
        text: "OK"
        on_press: root.dismiss()

<MainWidget>:

    FloatLayout:
        size: root.size
        orientation: "horizontal"
        canvas:
            Color:
                rgb: .132, .232, .259      #Tabbed panel background
            Rectangle:
                size: self.size

        TabbedPanel:
            do_default_tab: False
            background_color: (.132, .232, .259)  #Content background
            background_image: ''

            TabbedPanelItem:
                text: "About"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    Label2:
                        text: "Name: Matej Sveda\nAge: 27\nHobbies: Travelling\n                Coding\n                Friends\n                Movies"
                        pos_hint: {"center_x" : .185, "center_y": .75}
                    Image:
                        source: "skye.jpg"
                        size_hint: .5, .5
                        pos_hint: {"center_x": .672, "center_y": .73}
                    Image:
                        source: "golden_gate.jpg"
                        size_hint: .85, .85
                        pos_hint: {"center_x": .5, "center_y": .3}
                    ExitButton

            TabbedPanelItem:
                text: "Education"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    Label2:
                        text: "Gymnasium Sternberk - 2006 - 2010 \n\nVUT Brno - 2010 - 2017\n"
                        pos_hint: {"center_x" : .31, "center_y": .81}
                    Label3:
                        text: "- Materials Science and Engineering\n    - Diploma thesis focused on cement production and improvement of its efficiency\n    - Internship - Hochschule Wismar, Germany - Construction diagnosis assistant"
                        pos_hint: {"center_x": .5, "center_y": .67}
                    Image:
                        source: "fast.jpg"
                        size_hint: .45, .45
                        pos_hint: {"center_x": .28, "center_y": .335}
                    Image:
                        source: "wismar.jpg"
                        size_hint: .446, .446
                        pos_hint: {"center_x": .71, "center_y": .335}
                    ExitButton

            TabbedPanelItem:
                text: "Experience"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    Label2:
                        text: "SIKA CZ, s.r.o. - Technical sales representative"
                        pos_hint: {"center_x": .39, "center_y": .895}
                    Label3:
                        text: "- Selling and promoting products related to cement/concrete industry and providing\n technical support to customers in Moravian region, mainly to major manufacturers\n of cement or precast concrete."
                        pos_hint: {"center_x": .495, "center_y": .78}
                    Label2:
                        text: "Python & Java"
                        pos_hint: {"center_x": .148, "center_y": .65}
                    Label3:
                        text: "- Basics of OOP, courses and certificates given by ITnetwork.cz"
                        pos_hint: {"center_x": .39, "center_y": .58}
                    Image:
                        source: "python.png"
                        size_hint: .32, .4
                        pos_hint: {"center_x": .2, "center_y": .3}
                    Image:
                        source: "java.png"
                        size_hint: .3, .3
                        pos_hint: {"center_x": .5, "center_y": .3}
                    Image:
                        source: "postgresql.png"
                        size_hint: .2, .2
                        pos_hint: {"center_x": .71, "center_y": .35}
                    Image:
                        source: "git.png"
                        size_hint: .13, .13
                        pos_hint: {"center_x": .75, "center_y": .17}
                    Image:
                        source: "kivy.png"
                        size_hint: .1, .1
                        pos_hint: {"center_x": .9, "center_y": .3}
                    ExitButton

            TabbedPanelItem:
                text: "Contact"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    Label1:
                        text: "CONTACT ME"
                        pos_hint: {"center_x" : .18, "center_y" : .9}
                    Label3:
                        text: "NAME:"
                        pos_hint: {"center_x" : .07, "center_y" : .7}
                    Label3:
                        text: "EMAIL:"
                        pos_hint: {"center_x" : .07, "center_y" : .55}
                    Label3:
                        text: "MESSAGE:"
                        pos_hint: {"center_x" : .09, "center_y" : .4}
                    Label3:
                        text: "Consent to the processing of personal data"
                        pos_hint: {"center_x" : .45, "center_y" : .090}
                    TextInput:
                        id: name
                        size_hint: .5,.08
                        pos_hint: {"x": .05,"y":.585}
                    TextInput:
                        id: email
                        size_hint: .5,.08
                        pos_hint: {"x": .05,"y":.437}
                    TextInput:
                        id: msg_content
                        size_hint: .8,.20
                        pos_hint: {"x": .05,"y":.165}
                    Button:
                        size_hint: .15, .08
                        text: "SEND"
                        pos_hint: {"x": .05, "y":.05}
                        on_press: root.send_msg()
                    CheckBox:
                        size_hint: (.05, .05)
                        pos_hint: {"x": .67, "y": .064}
                        an_active: root.checkbox_active(self, self.active)
                    ExitButton


