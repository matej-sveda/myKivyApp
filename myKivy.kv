#:kivy 1.10.1
<ExitButton@Button>
    size_hint: .1, .1
    pos_hint: {"x" : .9, "top" : .1}
    on_press: app.exit()
    text: "EXIT"
    background_color: 1, 0, 0, 1

<Label1@Label>
    font_size: self.height
    size_hint: (1, 0.07)

<Label2@Label>
    font_size: self.height
    size_hint: (1, 0.03)

<MainWidget>:

    FloatLayout:
        size: root.size
        orientation: "horizontal"
        canvas:
            Color:
                rgb: .132, .232, .259      #Tabbed panel background
            Rectangle:
                size: self.size

        TabbedPanel:
            do_default_tab: False
            background_color: (.132, .232, .259)  #Content background
            background_image: ''

            TabbedPanelItem:
                text: "About"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "Experience"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "3rd Tab"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "Contact"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    Label1:
                        text: "CONTACT ME"
                        pos_hint: {"center_x" : .18, "center_y" : .9}

                    Label2:
                        text: "NAME:"
                        pos_hint: {"center_x" : .07, "center_y" : .7}

                    Label2:
                        text: "EMAIL:"
                        pos_hint: {"center_x" : .07, "center_y" : .55}

                    Label2:
                        text: "MESSAGE:"
                        pos_hint: {"center_x" : .09, "center_y" : .4}

                    TextInput:
                        size_hint: .5,.08
                        pos_hint: {"x": .05,"y":.585}

                    TextInput:
                        size_hint: .5,.08
                        pos_hint: {"x": .05,"y":.437}

                    TextInput:
                        size_hint: .8,.20
                        pos_hint: {"x": .05,"y":.165}





                    ExitButton


