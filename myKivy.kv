#:kivy 1.10.1
<ExitButton@Button>
    size_hint: .1, .1
    pos_hint: {"x" : .9, "top" : .1}
    text: "EXIT"
    on_press: app.exit()
    background_color: 1, 0, 0, 1

<MainWidget>:

    FloatLayout:
        size: root.size
        orientation: "horizontal"
        canvas:
            Color:
                rgb: .132, .232, .249
            Rectangle:
                size: self.size
                pos: self.pos

        TabbedPanel:
            do_default_tab: False

            TabbedPanelItem:
                size_hint: .1, .1
                text: "1st Tab"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton

            TabbedPanelItem:
                text: "2nd Tab"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "3rd Tab"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "4th Tab"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


