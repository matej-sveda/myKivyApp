#:kivy 1.10.1
<ExitButton@Button>
    size_hint: .1, .1
    pos_hint: {"x" : .9, "top" : .1}
    on_press: app.exit()
    text: "EXIT"
    background_color: 1, 0, 0, 1

<Label1@Label>
    font_size: self.height
    size_hint: (1, 0.07)

<Label2@Label>
    font_size: self.height
    size_hint: (1, 0.03)

<CustomPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    Button:
        text: "Agree"
        on_press: root.dismiss()

<MainWidget>:

    FloatLayout:
        size: root.size
        orientation: "horizontal"
        canvas:
            Color:
                rgb: .132, .232, .259      #Tabbed panel background
            Rectangle:
                size: self.size

        TabbedPanel:
            do_default_tab: False
            background_color: (.132, .232, .259)  #Content background
            background_image: ''

            TabbedPanelItem:
                text: "About"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "Education"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    ExitButton


            TabbedPanelItem:
                text: "Experience"
                FloatLayout:
                    spacing: 10
                    padding: 10

                    ExitButton


            TabbedPanelItem:
                text: "Contact"
                FloatLayout:
                    spacing: 10
                    padding: 10
                    Label1:
                        text: "CONTACT ME"
                        pos_hint: {"center_x" : .18, "center_y" : .9}

                    Label2:
                        text: "NAME:"
                        pos_hint: {"center_x" : .07, "center_y" : .7}

                    Label2:
                        text: "EMAIL:"
                        pos_hint: {"center_x" : .07, "center_y" : .55}

                    Label2:
                        text: "MESSAGE:"
                        pos_hint: {"center_x" : .09, "center_y" : .4}

                    Label2:
                        text: "Consent to the processing of personal data"
                        pos_hint: {"center_x" : .42, "center_y" : .090}

                    TextInput:
                        id: name
                        size_hint: .5,.08
                        pos_hint: {"x": .05,"y":.585}

                    TextInput:
                        id: email
                        size_hint: .5,.08
                        pos_hint: {"x": .05,"y":.437}

                    TextInput:
                        id: msg_content
                        size_hint: .8,.20
                        pos_hint: {"x": .05,"y":.165}

                    Button:
                        size_hint: .15, .08
                        text: "SEND"
                        pos_hint: {"x": .05, "y":.05}
                        on_press: root.send_msg()

                    CheckBox:
                        id: chb
                        group: "check"
                        size_hint: (.05, .05)
                        pos_hint: {"x": .61, "y": .064}
                        an_active: root.checkbox_active(self, self.active)

                    ExitButton


